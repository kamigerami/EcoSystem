{
    {% if bootstrap_flag == "true" %}
    "bootstrap_expect": 3,
    {% elif host_type == "bootstrap" %}
    "retry_join" : ["{{ consul_non_master_ip }}","{{ consul_server_ip }}"],
    {% elif host_type == "server" and ip == consul_server_ip %}
    "retry_join" : ["{{ consul_master_ip }}","{{ consul_non_master_ip }}"],
    {% elif host_type == "server" and ip == consul_non_master_ip %}
    "retry_join" : ["{{ consul_master_ip }}","{{ consul_server_ip }}"],
    {% else %}
    "retry_join" : ["{{ consul_master_ip }}","{{ consul_non_master_ip }}","{{ consul_server_ip }}"],
    {% endif %}
    "server" : {{ server_flag }},
    {% if ui_flag == "true" %}
    "ui_dir" : "/opt/consul/ui/dist",
    {% endif %}
    "datacenter" : "dc1",
    "data_dir" : "/opt/consul/data",
    "log_level" : "INFO",
    "enable_syslog" : true,
    "enable_debug": true,
    "advertise_addr": "{{ ip }}",
    "client_addr": "0.0.0.0",
    {% if host_type == "bootstrap" %}
    "http_api_response_headers" : { "Access-Control-Allow-Origin" : "*" },
    "addresses" : { "http": "0.0.0.0" },
    "ports" : { "http" : 80 },
    {% elif host_type == "agent" %}
    "services": [ {
    "name": "HTTP",
    "address": "127.0.0.1",
    "port": 80 
    }],
    {% endif %}
    "checks": [
        {
            "id" : "check_cpu_utilization",
            "notes" : "Greater than 50% warn, greater than 75% fail.",
            "name" : "CPU Utilization",
            "script" : "/opt/consul/scripts/cpu_utilization.sh",
            "interval" : "10s"
        },
        {
          "id" : "check_mem_utilization",
          "notes" : "Greater than 50% warn, greater than 75% fail.",
          "name" : "MEM Utilization",
          "script" : "/opt/consul/scripts/mem_utilization.sh",
          "interval" : "10s"
        },
        {
          "id" : "check_hdd_utilization",
          "notes" : "Greater than 50% warn, greater than 75% fail.",
          "name" : "HDD Utilization",
          "script" : "/opt/consul/scripts/hdd_utilization.sh",
          "interval" : "10s"
        }
    ]
}
